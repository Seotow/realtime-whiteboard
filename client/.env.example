# Environment Variables for Client

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_SOCKET_URL=ws://localhost:5000

# Application Configuration
VITE_APP_NAME="Real-time Whiteboard"
VITE_APP_VERSION="2.0.0"

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIDEO_CHAT=false
VITE_ENABLE_FILE_UPLOAD=true

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# Canvas Configuration
VITE_CANVAS_MAX_WIDTH=4000
VITE_CANVAS_MAX_HEIGHT=4000
VITE_CANVAS_DEFAULT_WIDTH=1200
VITE_CANVAS_DEFAULT_HEIGHT=800
